html(lang='en')
	head
		// Required meta tags
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		title Corona Admin
		// plugins:css
		link(rel='stylesheet', href='/stylesheets/mdi/css/materialdesignicons.min.css')
		link(rel='stylesheet', href='/stylesheets/css/vendor.bundle.base.css')
		// endinject
		// Plugin css for this page
