		// inject:css
		// endinject
		// Layout styles
		link(rel='stylesheet', href='/stylesheets/css/style.css')
		// End layout styles
		link(rel='shortcut icon', href='/images/favicon.png')
	body
		.container-scroller
			.container-fluid.page-body-wrapper.full-page-wrapper
				.row.w-100.m-0
					.content-wrapper.full-page-wrapper.d-flex.align-items-center.auth.login-bg
						.card.col-lg-4.mx-auto
							.card-body.px-5.py-5
								h3.card-title.text-left.mb-3 OTP Validation 
								form(action = "/forget/otp/newpass" method = "post" id ="forgetPassForm")
									.form-group
									if value
										label Enter New Password *
										input.form-control.p_input.mb-3(type='text' name = 'newPass')
										each v in value
											if v.param =='newPass'
												span(class = 'text-danger errormsg') !{v.msg}
									else
										label Enter New Password *
										input.form-control.p_input.mb-3(type='text' name = 'newPass')
									if value
										label Conferm Password *
										input.form-control.p_input.mb-3(type='text' name = 'cnfPass')
										each v in value
											if v.param =='cnfPass'
												span(class = 'text-danger errormsg') !{v.msg}
									else
										label Conferm Password *
										input.form-control.p_input.mb-3(type='text' name = 'cnfPass')
									.form-outline
										button.btn.btn-primary.btn-block.enter-btn(type='submit') Submit
		script(src='/javascripts/js/vendor.bundle.base.js')
		script(src='/javascripts/js/off-canvas.js')
		script(src='/javascripts/js/hoverable-collapse.js')
		script(src='/javascripts/js/misc.js')
		script(src='/javascripts/js/settings.js')
		script(src='/javascripts/js/todolist.js')
		script(src="https://code.jquery.com/jquery-3.6.4.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js")
